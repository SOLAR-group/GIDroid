                    tools:context=".MainActivity"/>

                <TextView
                    android:id="@+id/main_last_date_time_value_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    tools:context=".MainActivity"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>