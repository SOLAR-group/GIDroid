<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/preferences_category_settings_title">
        <CheckBoxPreference
            android:defaultValue="@bool/preferences_imperial_units_default_value"
            android:key="@string/preferences_imperial_units_key"
            android:summary="@string/preferences_imperial_units_summary"
            android:title="@string/preferences_imperial_units_title"/>

        <info.zamojski.soft.towercollector.controls.HtmlSummaryListPreference
            android:defaultValue="@string/preferences_app_theme_mode_default_value"
            android:entries="@array/preferences_app_theme_mode_entries_labels"
            android:entryValues="@array/preferences_app_theme_mode_entries_values"
            android:key="@string/preferences_app_theme_mode_key"
            android:summary="@string/preferences_app_theme_summary"
            android:title="@string/preferences_app_theme_title"/>

        <CheckBoxPreference
            android:defaultValue="@bool/preferences_main_keep_screen_on_mode_default_value"
            android:key="@string/preferences_main_keep_screen_on_mode_key"
            android:summary="@string/preferences_main_keep_screen_on_summary"
            android:title="@string/preferences_main_keep_screen_on_title"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_category_help_title">
        <PreferenceScreen
            android:key="@string/preferences_about_main_keep_screen_on_key"
            android:summary="@string/preferences_about_main_keep_screen_on_summary"
            android:title="@string/preferences_about_main_keep_screen_on_title"/>
    </PreferenceCategory>

</PreferenceScreen>