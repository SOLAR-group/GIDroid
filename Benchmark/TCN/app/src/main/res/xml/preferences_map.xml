<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences_category_settings_title">

        <SwitchPreferenceCompat
            app:defaultValue="@bool/preferences_main_map_enable_default_value"
            app:key="@string/preferences_main_map_enable_key"
            app:summaryOff="@string/preferences_main_map_enable_off_summary"
            app:summaryOn="@string/preferences_main_map_enable_on_summary"
            app:title="@string/preferences_main_map_enable_title" />

        <SwitchPreferenceCompat
            app:defaultValue="@bool/preferences_main_map_force_light_theme_default_value"
            app:key="@string/preferences_main_map_force_light_theme_key"
            app:summaryOff="@string/preferences_main_map_force_light_theme_off_summary"
            app:summaryOn="@string/preferences_main_map_force_light_theme_on_summary"
            app:title="@string/preferences_main_map_force_light_theme_title" />

        <SwitchPreferenceCompat
            app:defaultValue="@bool/preferences_main_map_unmetered_only_default_value"
            app:key="@string/preferences_main_map_unmetered_only_key"
            app:summaryOff="@string/preferences_main_map_unmetered_only_off_summary"
            app:summaryOn="@string/preferences_main_map_unmetered_only_on_summary"
            app:title="@string/preferences_main_map_unmetered_only_title" />

        <SeekBarPreference
            android:max="@integer/preferences_main_map_cache_size_max_value"
            app:allowDividerBelow="true"
            app:defaultValue="@integer/preferences_main_map_cache_size_default_value"
            app:key="@string/preferences_main_map_cache_size_key"
            app:min="@integer/preferences_main_map_cache_size_min_value"
            app:seekBarIncrement="@integer/preferences_main_map_cache_size_increment_value"
            app:showSeekBarValue="true"
            app:summary="@string/preferences_main_map_cache_size_summary"
            app:title="@string/preferences_main_map_cache_size_title" />

        <PreferenceScreen
            app:key="@string/preferences_main_map_clear_cache_key"
            app:summary="@string/preferences_main_map_clear_cache_summary"
            app:title="@string/preferences_main_map_clear_cache_title" />

    </PreferenceCategory>

</PreferenceScreen>