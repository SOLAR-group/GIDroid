<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences_category_settings_title">
        <SwitchPreferenceCompat
            app:defaultValue="@bool/preferences_imperial_units_default_value"
            app:key="@string/preferences_imperial_units_key"
            app:summaryOff="@string/preferences_imperial_units_off_summary"
            app:summaryOn="@string/preferences_imperial_units_on_summary"
            app:title="@string/preferences_imperial_units_title"/>

        <info.zamojski.soft.towercollector.controls.HtmlSummaryListPreference
            app:defaultValue="@string/preferences_app_theme_mode_default_value"
            app:entries="@array/preferences_app_theme_mode_entries_labels"
            app:entryValues="@array/preferences_app_theme_mode_entries_values"
            app:key="@string/preferences_app_theme_mode_key"
            app:summary="@string/preferences_app_theme_summary"
            app:title="@string/preferences_app_theme_title"/>

        <SwitchPreferenceCompat
            app:defaultValue="@bool/preferences_main_keep_screen_on_mode_default_value"
            app:key="@string/preferences_main_keep_screen_on_mode_key"
            app:summaryOff="@string/preferences_main_keep_screen_on_off_summary"
            app:summaryOn="@string/preferences_main_keep_screen_on_on_summary"
            app:title="@string/preferences_main_keep_screen_on_title"/>

        <SwitchPreferenceCompat
            app:defaultValue="@bool/preferences_show_collector_status_bar_default_value"
            app:key="@string/preferences_show_collector_status_bar_key"
            app:summaryOff="@string/preferences_show_collector_status_bar_off_summary"
            app:summaryOn="@string/preferences_show_collector_status_bar_on_summary"
            app:title="@string/preferences_show_collector_status_bar_title"/>

        <PreferenceScreen
            app:key="@string/preferences_notification_settings_key"
            app:summary="@string/preferences_notification_settings_summary"
            app:title="@string/preferences_notification_settings_title"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/preferences_category_help_title">
        <PreferenceScreen
            app:key="@string/preferences_about_main_keep_screen_on_key"
            app:summary="@string/preferences_about_main_keep_screen_on_summary"
            app:title="@string/preferences_about_main_keep_screen_on_title"/>
    </PreferenceCategory>

</PreferenceScreen>