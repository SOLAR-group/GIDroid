<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_collector_status_fragment" />

    <include layout="@layout/main_gps_status_fragment" />

    <include layout="@layout/main_invalid_system_time_fragment" />

    <include layout="@layout/main_airplane_mode_fragment" />

    <include layout="@layout/main_battery_optimization_fragment" />

    <include layout="@layout/main_power_save_mode_fragment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.osmdroid.views.MapView
            android:id="@+id/main_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/main_map_my_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/main_map_my_location_button"
            android:cropToPadding="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:src="@drawable/map_my_location" />

        <ImageButton
            android:id="@+id/main_map_follow_me_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_map_my_location_button"
            android:layout_alignStart="@+id/main_map_my_location_button"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/main_map_follow_me_button"
            android:cropToPadding="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:src="@drawable/map_follow_me_disabled" />

        <ImageButton
            android:id="@+id/main_map_location_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_map_follow_me_button"
            android:layout_alignStart="@+id/main_map_my_location_button"
            android:background="@android:color/transparent"
            android:contentDescription="@string/main_map_location_disable_button"
            android:cropToPadding="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:src="@drawable/map_location_enabled" />

        <ImageButton
            android:id="@+id/main_map_help_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_map_copyright"
            android:layout_alignStart="@+id/main_map_my_location_button"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/main_map_help_button"
            android:cropToPadding="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:src="@drawable/map_help" />

        <TextView
            android:id="@+id/main_map_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="?attr/icon_background_color"
            android:paddingHorizontal="5dp"
            android:text="@string/map_copyright"
            android:textColor="?attr/icon_color"
            android:textSize="@dimen/smallest_font" />

    </RelativeLayout>

</LinearLayout>