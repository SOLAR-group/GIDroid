<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

    <TableRow
        android:id="@+id/main_gps_status_tablerow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_needs_attention"
        android:clickable="true"
        android:onClick="displayHelpOnClick"
        android:visibility="gone"
        android:focusable="true">

        <TextView
            android:id="@+id/main_gps_status_label_textview"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:text="@string/main_gps_status_label"
            android:textColor="@color/text_light"
            tools:context=".MainActivity" />

        <TextView
            android:id="@+id/main_gps_status_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:textColor="@color/text_light"
            tools:context=".MainActivity"
            tools:text="@string/status_initializing" />
    </TableRow>

</TableLayout>