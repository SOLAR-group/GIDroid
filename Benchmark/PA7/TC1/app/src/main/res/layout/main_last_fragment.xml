                    android:id="@+id/main_last_cell_id_rnc_label_textview"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:text="@string/main_last_cell_id_rnc_label"
                    tools:context=".MainActivity"/>

                <TextView
                    android:id="@+id/main_last_cell_id_rnc_value_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    tools:context=".MainActivity"
                    tools:text="24910 / 188" />
            </TableRow>

            <TableRow
                android:id="@+id/main_last_cell_id_tablerow"
