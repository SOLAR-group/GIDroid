                    android:padding="@dimen/padding_small"
                    tools:context=".MainActivity"
                    tools:text="12" />
            </TableRow>

            <TableRow
                android:id="@+id/main_last_mcc_tablerow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="displayHelpOnClick">

                <TextView
                    android:id="@+id/main_last_mcc_label_textview"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:text="@string/main_last_mcc_label"
                    tools:context=".MainActivity"/>

                <TextView
                    android:id="@+id/main_last_mcc_value_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    tools:context=".MainActivity"
                    tools:text="123" />
            </TableRow>

            <TableRow
                android:id="@+id/main_last_mnc_tablerow"
