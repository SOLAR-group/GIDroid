<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/preferences_category_settings_title">
        <CheckBoxPreference
            android:defaultValue="@bool/preferences_tracking_enabled_default_value"
            android:key="@string/preferences_tracking_enabled_key"
            android:summary="@string/preferences_tracking_enabled_summary"
            android:title="@string/preferences_tracking_enabled_title"/>
        <CheckBoxPreference
            android:defaultValue="@bool/preferences_update_check_enabled_default_value"
            android:key="@string/preferences_update_check_enabled_key"
            android:summary="@string/preferences_update_check_enabled_summary"
            android:title="@string/preferences_update_check_enabled_title"/>
