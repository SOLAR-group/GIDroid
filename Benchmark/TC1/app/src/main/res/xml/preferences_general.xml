<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="@string/preferences_general_category_settings_key"
        app:title="@string/preferences_category_settings_title">
        <SwitchPreferenceCompat
            app:defaultValue="@bool/preferences_tracking_enabled_default_value"
            app:key="@string/preferences_tracking_enabled_key"
            app:summaryOff="@string/preferences_tracking_enabled_off_summary"
            app:summaryOn="@string/preferences_tracking_enabled_on_summary"
            app:title="@string/preferences_tracking_enabled_title" />
        <SwitchPreferenceCompat
            app:defaultValue="@bool/preferences_update_check_enabled_default_value"
            app:key="@string/preferences_update_check_enabled_key"
            app:summaryOff="@string/preferences_update_check_enabled_off_summary"
            app:summaryOn="@string/preferences_update_check_enabled_on_summary"
            app:title="@string/preferences_update_check_enabled_title" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="@string/preferences_general_category_help_key"
        app:title="@string/preferences_category_help_title">
        <PreferenceScreen
            app:key="@string/preferences_about_tracking_key"
            app:summary="@string/preferences_about_tracking_summary"
            app:title="@string/preferences_about_tracking_title" />
    </PreferenceCategory>

</PreferenceScreen>